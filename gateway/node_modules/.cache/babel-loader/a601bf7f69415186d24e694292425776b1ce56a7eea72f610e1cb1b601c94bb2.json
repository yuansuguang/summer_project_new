{"ast":null,"code":"export default {\n  data() {\n    return {\n      originalQuestion: {\n        title: '这是一个单选题的题目',\n        options: ['选项1', '选项2', '选项3']\n      },\n      editedQuestion: {},\n      // 用于编辑的题目对象\n      selectedOption: null,\n      // 用户选择的选项\n      isOwner: true,\n      // 假设当前用户是发布者\n      editMode: false // 是否处于编辑模式\n    };\n  },\n  created() {\n    // 初始化编辑模式下的题目对象\n    this.editedQuestion = {\n      ...this.originalQuestion\n    };\n  },\n  methods: {\n    toggleEditMode() {\n      // 切换编辑模式\n      this.editMode = !this.editMode;\n      // 编辑模式下，将原始题目内容复制到编辑题目对象中\n      if (this.editMode) {\n        this.editedQuestion = {\n          ...this.originalQuestion\n        };\n      }\n    },\n    saveQuestion() {\n      // 保存编辑后的题目内容\n      this.originalQuestion = {\n        ...this.editedQuestion\n      };\n      this.editMode = false; // 退出编辑模式\n    },\n    addOption(index) {\n      // 在指定位置增加一个选项\n      this.editedQuestion.options.splice(index + 1, 0, '');\n    },\n    removeOption(index) {\n      // 删除指定位置的选项\n      this.editedQuestion.options.splice(index, 1);\n    }\n  }\n};","map":{"version":3,"names":["data","originalQuestion","title","options","editedQuestion","selectedOption","isOwner","editMode","created","methods","toggleEditMode","saveQuestion","addOption","index","splice","removeOption"],"sources":["E:\\mytest\\src\\views\\qn-createpane\\qn-problemset\\SingleChoice.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <!-- 编辑模式下显示题目输入框 -->\r\n    <div v-if=\"editMode\">\r\n      <label>题目：</label>\r\n      <input type=\"text\" v-model=\"editedQuestion.title\">\r\n    </div>\r\n    <!-- 预览模式下显示题目 -->\r\n    <div v-else>\r\n      <h2>{{ editedQuestion.title }}</h2>\r\n    </div>\r\n    \r\n    <!-- 显示选项 -->\r\n    <div v-for=\"(option, index) in editedQuestion.options\" :key=\"index\">\r\n      <input type=\"radio\" :id=\"'option_' + index\" :value=\"option\" v-model=\"selectedOption\">\r\n      <label :for=\"'option_' + index\">{{ option }}</label>\r\n      \r\n      <!-- 编辑模式下显示增加和删除选项按钮 -->\r\n      <div v-if=\"editMode\">\r\n        <button @click=\"addOption(index)\" v-if=\"index === editedQuestion.options.length - 1\">增加选项</button>\r\n        <button @click=\"removeOption(index)\" v-if=\"editedQuestion.options.length > 1\">删除选项</button>\r\n      </div>\r\n    </div>\r\n    \r\n    <!-- 根据编辑权限显示编辑按钮或者保存按钮 -->\r\n    <button v-if=\"isOwner && !editMode\" @click=\"toggleEditMode\">编辑题目</button>\r\n    <button v-else-if=\"isOwner && editMode\" @click=\"saveQuestion\">保存题目</button>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      originalQuestion: {\r\n        title: '这是一个单选题的题目',\r\n        options: ['选项1', '选项2', '选项3']\r\n      },\r\n      editedQuestion: {}, // 用于编辑的题目对象\r\n      selectedOption: null, // 用户选择的选项\r\n      isOwner: true, // 假设当前用户是发布者\r\n      editMode: false // 是否处于编辑模式\r\n    };\r\n  },\r\n  created() {\r\n    // 初始化编辑模式下的题目对象\r\n    this.editedQuestion = { ...this.originalQuestion };\r\n  },\r\n  methods: {\r\n    toggleEditMode() {\r\n      // 切换编辑模式\r\n      this.editMode = !this.editMode;\r\n      // 编辑模式下，将原始题目内容复制到编辑题目对象中\r\n      if (this.editMode) {\r\n        this.editedQuestion = { ...this.originalQuestion };\r\n      }\r\n    },\r\n    saveQuestion() {\r\n      // 保存编辑后的题目内容\r\n      this.originalQuestion = { ...this.editedQuestion };\r\n      this.editMode = false; // 退出编辑模式\r\n    },\r\n    addOption(index) {\r\n      // 在指定位置增加一个选项\r\n      this.editedQuestion.options.splice(index + 1, 0, '');\r\n    },\r\n    removeOption(index) {\r\n      // 删除指定位置的选项\r\n      this.editedQuestion.options.splice(index, 1);\r\n    }\r\n  }\r\n};\r\n</script>\r\n"],"mappings":"AA+BA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,gBAAgB,EAAE;QAChBC,KAAK,EAAE,YAAY;QACnBC,OAAO,EAAE,CAAC,KAAK,EAAE,KAAK,EAAE,KAAK;MAC/B,CAAC;MACDC,cAAc,EAAE,CAAC,CAAC;MAAE;MACpBC,cAAc,EAAE,IAAI;MAAE;MACtBC,OAAO,EAAE,IAAI;MAAE;MACfC,QAAQ,EAAE,KAAI,CAAE;